rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	match /users/{user_id} {
    	allow read, write, update, delete: if request.auth.uid == user_id;
      allow read: if request.auth.uid != null;
    }
    match /friend-requests/{recipient} {
      allow read, write, update, delete: if request.auth.uid == recipient;
      allow create, update: if request.auth.uid in request.resource.data.sender;
    }
    match /private-requests/{user_id} {
      allow read, write, update, delete: if request.auth.uid == user_id;
    }
    match /accepted-friends/{user_id} {
      allow read, write, update, delete: if request.auth.uid == user_id;
      allow read: if request.auth.uid != null;
      //in resource.data.sender;
    }
    match /friendlists/{user_id} {
      allow read, write, update, delete: if request.auth.uid == user_id;
    }
  }
}
