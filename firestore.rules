rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	match /users/{user_id} {
    	allow create, update, delete: if request.auth.uid == user_id;
      allow read;
    }
    match /friend-requests/{recipient} {
      allow create, update, delete: if request.auth.uid == recipient;
      allow update: if request.auth.uid in request.resource.uid;
      //allow read, update;
    }
  }
}
